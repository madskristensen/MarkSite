@functions 
{
	public static string CreateLink(MarkdownPage page)
	{
		var segments = new List<string>(new[] { page.Slug });
		var parent = page.Parent;

		while (parent != null)
		{
			segments.Add(parent.Slug);
			parent = parent.Parent;
		}

		string path = string.Join("/", segments.Reverse<string>().Skip(1));
		return "/" + (string.IsNullOrEmpty(path) ? string.Empty : path + "/");
	}

}

@helper RenderMenu(IEnumerable<MarkdownPage> pages, bool isOpen = false, bool top = false)
{
	<ul class="@(top ? "nav navbar-nav" : "dropdown-menu")">
		@foreach (var page in pages.Where(p => p.ShowInMenu))
		{
			if (page.Children.Count > 0) // todo:  and any children are visible...and their childrens children...
			{
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#" id="">@page.Title <span class="caret"></span></a>
					@RenderMenu(page.Children, isOpen)
				</li>
			}
			else
			{
				<li>@CreateAnchorTag(page)</li>
			}
		}
	</ul>
}

@helper CreateAnchorTag(MarkdownPage page)
{
	string link = CreateLink(page);
	string className = page == PageSystem.GetCurrentPage(Request) ? "active" : null;

	<a href="@link" class="@className">@page.Title</a>
}

